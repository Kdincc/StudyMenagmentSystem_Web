@using Task10.UI.ViewModels

@model CreateGroupViewModel

<div class="main-container">
    <h1 class="header-class">Create Group</h1>
    @using (Html.BeginForm("CreateGroup", "Groups", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="d-flex flex-column">
            <div class="form-group">
                <label class="form-label">Name:</label>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-input" } } )
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="form-label">Course:</label>
                @Html.DropDownListFor(
                         model => model.CourseId,
                         new SelectList(Model.Courses, "Id", "Name"),
                         new { @class = "edit-group-select" })
            </div>
        </div>
        <div>
            <button class="form-button" type="submit">Create</button>
        </div>
    }
</div>
