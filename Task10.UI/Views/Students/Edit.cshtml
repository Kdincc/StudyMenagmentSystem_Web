@using Task10.UI.ViewModels;

@model EditStudentViewModel

<div class="main-container">
    <h1 class="header-class">Edit Student</h1>
    
    @using (Html.BeginForm("Edit", "Students", FormMethod.Post))
    {
        @Html.AntiForgeryToken();

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="d-flex flex-column">
            <div class="form-group">
                <label class="form-label">Name:</label>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-input", Value = Model.Name } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="form-label">Last name:</label>
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-input", Value = Model.LastName } })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="form-label">Group:</label>
                @Html.DropDownListFor(
                    model => model.GroupId, 
                    new SelectList(Model.Groups, "Id", "Name"), 
                    new { @class = "edit-group-select" })
            </div>

            
        </div>

        @Html.Hidden("_method", "PUT")

        <div>
            <button class="form-button" type="submit">Save</button>
        </div>
    }
</div>